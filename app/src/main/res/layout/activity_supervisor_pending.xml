<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@drawable/login_back"
    tools:context=".Activity.SupervisorPendingActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="35dp"
        android:layout_marginTop="3dp"
        android:orientation="horizontal"
        >

        <Button
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:id="@+id/button_all"
            android:text="All"
            android:background="@drawable/background_item"
            android:textAlignment="center"
            android:layout_weight="1"
            />
        <Button
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:id="@+id/button_electrician"
            android:text="Electrician"
            android:textAppearance="@style/TextAppearance.AppCompat"
            android:background="@drawable/background_item"
            android:textAlignment="center"
            android:layout_weight="1"
            />
        <Button
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:id="@+id/button_plumber"
            android:text="Plumber"
            android:background="@drawable/background_item"
            android:textAlignment="center"
            android:textAppearance="@style/TextAppearance.AppCompat"
            android:layout_weight="1"
            />
        <Button
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:id="@+id/button_carpenter"
            android:text="Carpenter"
            android:textAppearance="@style/TextAppearance.AppCompat"
            android:background="@drawable/background_item"
            android:textAlignment="center"
            android:layout_weight="1"
            />
        <Button
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:id="@+id/button_other"
            android:text="other"
            android:textAppearance="@style/TextAppearance.AppCompat"
            android:background="@drawable/background_item"
            android:textAlignment="center"
            android:layout_weight="1"
            />


    </LinearLayout>


    <androidx.recyclerview.widget.RecyclerView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/recyclerView_pending"
        android:layout_marginTop="3dp"/>

</LinearLayout>